<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Heads or Tails</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <section class="left">
    <h1>Heads or Tails</h1>

    <section class="bet">
      <h2>Enter Your name and keep track of your wins and loses</h2>

      <form action="/flips" method="POST">
        <input type="text" placeholder="Name" name="name">
        <button type="submit">Submit</button>
      </form>
    </section>


    <h3>Ready?</h3>
    <ul class="/flips">
    <% for(var i=0; i<messages.length; i++) {%>
      <li class="message">
        <span><%= messages[i].name %></span>
      <span>Wins:</span><span><%= messages[i].thumbUp %></span>
        <span>Loses:</span><span><%= messages[i].thumbDown %></span>
        <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
        <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
    <% } %>
    </ul>


    <section>

      <h2 id="winLoss"></h2>

      <h3 id="compScore"></h3>
      <button id="heads" type="button" name="button">Heads</button>
      <button id="tails" type="button" name="button">Tails</button>
    </section>
  </section>
<section class="right">
  <img src="coinflip.jpg" alt="flipping coins">
</section>
  <script src="main.js"></script>

</body>
</html>
